@{
    ViewBag.Title = "Results - Avaloq Search";
}

<div id="searchPage">
    <header>
        <a href="/"><img id="avaloqlogo" src="~/Content/Logos/avaloqlogo.png"></a>
        <a href="/"><img id="avaloqicon" src="~/Content/Icons/logoicon.ico"></a>
        <div id="searchDiv">
            <form id="searchboxform" autocomplete="off">
                <input id="searchbox" data-bind="value: query" type="text" name="search" placeholder="Type in your Avaloq search..">
                <input data-bind="click: updateQuery" type="submit" id="searchsubmit" value="">
            </form>
        </div>
    </header>
    <div id="sidebar">
        <div id="accordionFilters">
            <h3 id="h3Filters" class="accordionHeader">Filters</h3>
            <div id="formcontain" class="container form-group">
                <form id="advancedsearchform" autocomplete="off">
                    <div class="col-md-14 col-lg-14">
                        <div id="titleDIV" class="row">
                            <label class="" for="titleboxtext">Title / Subtitle / Keywords</label>
                            <input type="checkbox" id="titlecheckbox"><label id="titleonly" class="form-text text-muted" for="titlecheckbox">title only</label>
                            <input class="form-control" id="titleboxtext" type="text">     
                        </div>
                        <div id="docuidDIV" class="row">
                            <div class="input-group">
                                <label for="docuidboxtext">Docu ID</label>
                                <input class="form-control" id="docuidboxtext" type="text">
                            </div>
                        </div>
                        <div id="releaseDIV" class="row">
                            <div class="input-group">
                                <label class="" for="releasedd">Release</label>
                                <select class="form-control" id="releasedd" name="release">
                                    <option value="0">-------------------------------</option>
                                    <option value="4">4.0</option>
                                    <option value="3">3.0</option>
                                    <option value="2">2.0</option>
                                    <option value="1">1.0</option>
                                </select>
                            </div>
                        </div>
                        <div id="functionalareaDIV" class="row">
                            <div class="input-group">
                                <label class="" for="funcareamultiple">Functional Area</label>
                                <select class="form-control" id="funcareamultiple" name="funcarea" multiple>
                                    <option value="0">.......Avaloq Banking System.......</option>
                                    <option value="1">Accounting and Position Keeping</option>
                                    <option value="2">AFP Front Office</option>
                                    <option value="3">AFP Mobile</option>
                                </select>
                            </div>
                        </div>
                        <div id="docutypeDIV" class="row">
                            <div class="input-group">
                                <label class="" for="docutypedd">Docu Type</label>
                                <select class="form-control" id="docutypedd" name="docutype">
                                    <option value="0">-------------------------------</option>
                                    <option value="1">PDF</option>
                                    <option value="2">HTML</option>
                                </select>
                            </div>
                        </div>
                        <div id="subtypeDIV" class="row">
                            <div class="input-group">
                                <label for="subtypedd">Subtype</label>
                                <select class="form-control" id="subtypedd" name="subtype">
                                    <option value="0">-------------------------------</option>
                                    <option value="1">Team 1</option>
                                    <option value="2">Team 2</option>
                                </select>
                            </div>
                        </div>
                        <div id="lastmodifiedDIV" class="row">
                            <div class="input-group">
                                <label for="lastmodified">Last Modified</label>
                                <p>From</p>
                                <input class="form-control" type="text" id="from-date-input">
                                <p>To</p>
                                <input class="form-control" type="text" id="to-date-input">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div id="submit-reset">
            <div id="resetbuttondiv">
                <button class="adv-s-hide" id="reset-adv-b"></button>
            </div>
            <div>
                <button class="adv-s-hide" id="submit-adv-b"></button>
            </div>
        </div>
    </div>
    <div id="results">
        <div id="resultsinfo">
            <div id="orderbyDIV">
                    <select class="form-control" id="orderbydd" name="orderby">
                        <option value="-1">Order By</option>
                        <option value="0">Title</option>
                        <option value="1">User Added</option>
                        <option value="2">Date Added</option>
                        <option value="3">Last Edited</option>
                    </select>
                <input type="checkbox" id="desccheckbox"><label id="desc" class="form-text text-muted" for="desccheckbox">desc.</label>
            </div>
            <div id="infoDIV">
                <p class="infop">Search for&nbsp;"</p>
                <p data-bind="text: query" class="infop" id="term"></p>
                <p class="infop">"&nbsp;took&nbsp;</p>
                <p data-bind="text: queryTime" class="infop" id="searchtime"></p>
                <p class="infop">&nbsp;milliseconds.</p>
            </div>
            <span id="resPageSpan"><p class="infop">Page&nbsp;</p><p data-bind="text: page" class="infop" id="pageNum"></p><p class="infop">&nbsp;of&nbsp;</p><p data-bind="text: pages" class="infop" id="totalPage"></p></span>
            <button data-bind="visible: page() > 1, click: prev" id="resPrev">Previous</button>
            <button data-bind="visible: page() < pages(), click: next" id="resNext">Next</button>
        </div>
        <form id="packageform" autocomplete="off">
            <!-- ko foreach: results -->
